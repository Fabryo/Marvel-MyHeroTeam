<resources>

    <style name="Theme.MyHeroTeam" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/background_app</item>
        <item name="colorPrimaryDark">@color/background_app</item>
        <item name="colorAccent">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.MyHeroTeam.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/background_app</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_app</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.DayNight">
        <item name="android:background">@color/background_app</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>